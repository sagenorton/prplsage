---
// Importing the necessary layout or resources
import BaseLayout from '../layouts/BaseLayout.astro';

// Gathering all projects and categorizing them
const allProjects = await Astro.glob('../pages/projects/*.md');

const categories = {
  'WEB DESIGN': [],
  'UX DESIGN': [],
  'GRAPHIC DESIGN': []
};

allProjects.forEach(project => {
  if (categories[project.frontmatter.category]) {
    categories[project.frontmatter.category].push(project);
  }
});
---

<nav class="portfolio-nav">
    <ul class="portfolio-menu">
        {Object.keys(categories).map(category => (
            <li class="menu-item">
                <button>{category}</button>
            </li>
        ))}
    </ul>
</nav>
