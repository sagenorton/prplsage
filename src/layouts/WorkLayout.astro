---
import BaseLayout from "../layouts/BaseLayout.astro";

// apply stylesheets
import "../styles/workStyles.css";

const { frontmatter } = Astro.props;
---

<BaseLayout>
    <img src={frontmatter.teaserimage} class="teaser-image" />
    <p class="project-title">{frontmatter.title}</p>
    <p class="category" >{frontmatter.category}</p>
    <p class="link" >{frontmatter.link}</p>
    <p class="link-button">
      <a href={frontmatter.link} target="_blank" rel="noopener noreferrer">
        <button class="project-button">View Project</button>
      </a>
    </p>
    

  <slot />

    <ul class="images">
		{frontmatter.images.map( (image) =>  
			<li>{image}</li>
		)}
		</ul>

</BaseLayout>
